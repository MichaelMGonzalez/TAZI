digraph G {
    ordering=out;
 % for edge in edges
    {{edge}};
 % endfor
 % for node in nodes
    % if node.node_type == "action_node" 
    {{node.name}} [shape="polygon", sides=4, fillcolor="green", style="filled", label="{{node.function}}"];
    % elif node.node_type == "condition_node"
    {{node.name}} [fillcolor="yellow", style="filled", label="{{node.function}}"];
    % elif node.holds_state
    {{node.name}} [shape="polygon",sides=4,label="{{node.label}} * ({{node.id}})"];
	% else
	{{node.name}} [shape="polygon",sides=4,label="{{node.label}} ({{node.id}})"];
    % endif
 % endfor
 }
